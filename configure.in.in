#MIN_CONFIG(3)
have_libkonq=yes
KDE_CHECK_HEADER(konq_popupmenu.h, ,[have_libkonq=no] )
KDE_CHECK_HEADER(konqbookmarkmanager.h, ,[have_libkonq=no] )

if test "$have_libkonq" = "yes"; then
  AC_DEFINE(__LIBKONQ__, 1, [Set if the konqueror library is present])
  LIB_KONQ=-lkonq
fi
AC_SUBST( LIB_KONQ )

AM_INIT_AUTOMAKE(krusader,1.50-beta1)

dnl CXXFLAGS="$NOOPT_CXXFLAGS" dnl __kdevelop[noopt]__
dnl CFLAGS="$NOOPT_CFLAGS" dnl __kdevelop[noopt]__
dnl CXXFLAGS="$CXXFLAGS $USE_EXCEPTIONS" dnl __kdevelop[exc]__

dnl KDE_NEED_FLEX dnl __kdevelop__
dnl AC_PROG_YACC dnl __kdevelop__


CPPFLAGS="$CPPFLAGS -D_LARGEFILE64_SOURCE -DKDE_NO_COMPAT -DQT_NO_ASCII_CAST"

