  <varlistentry>
	<term><menuchoice>
	<shortcut><keycombo action="simul">&Ctrl;<keycap>D</keycap></keycombo></shortcut>
	<guimenu>Commands</guimenu>
	<guimenuitem>Synchronize Directories</guimenuitem>
	</menuchoice></term>
