  <listitem>
      <para>New <link linkend="konfig-startup">Konfigurator</link>.</para>
        </listitem>
  <listitem>
      <para>&locate_lnk;.</para>
        </listitem>
  <listitem>
      <para><link linkend="folderhistory">Folder History</link>.</para>
        </listitem>
  <listitem>
      <para><link linkend="konfig-color">Color support</link>.</para>
        </listitem>
  <listitem>
      <para><link linkend="mount-man">Quickmode for MountMan</link>.</para>
        </listitem>
